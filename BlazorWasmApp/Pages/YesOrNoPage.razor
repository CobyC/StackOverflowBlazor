
@page "/yesornopage"

<h3>YesOrNoPage</h3>

<button @onclick="@(() => { YesOrNoDialogVisible = !YesOrNoDialogVisible; })"
        class="btn btn-light">
    Show Dialog
</button>

<label>You clicked : @myResult</label>

