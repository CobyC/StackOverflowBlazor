@code {
    protected enum DialogYesOrNoResult
    {
        Yes,
        No,
        None
    }

    string YesOrNoDialogHeader = "What do you want?";
    string YesOrNoDialogMessage = "Answer Yes or No";
    bool YesOrNoDialogVisible = false;
    DialogYesOrNoResult myResult = DialogYesOrNoResult.None;

    protected void OnYesOrNoButtonClick(DialogYesOrNoResult result)
    {
        myResult = result;

        YesOrNoDialogVisible = false;
    }

